@model ThisNetWorks.OrchardCore.Seo.TwitterMeta.ViewModels.TwitterMetaPartViewModel
<fieldset>
    <div class="form-group" asp-validation-class-for="Title">
        <label asp-for="Title">@T["Title"] </label>
        <input asp-for="Title" class="form-control content-preview-text" />
        <span class="hint">@T["Twitter title"]</span>
    </div>
</fieldset>
<fieldset>
    <div class="form-group" asp-validation-class-for="Description">
        <label asp-for="Description">@T["Description"] </label>
        <input asp-for="Description" class="form-control content-preview-text" />
        <span class="hint">@T["Twitter Description"]</span>
    </div>
</fieldset>
<fieldset>
    <div class="form-group" asp-validation-class-for="ImageAlt">
        <label asp-for="ImageAlt">@T["Image Alt"] </label>
        <input asp-for="ImageAlt" class="form-control content-preview-text" />
        <span class="hint">@T["Twitter ImageAlt"]</span>
    </div>
</fieldset>
<fieldset class="form-group">
    <label asp-for="GoogleSchema">@T["Google Schema"]</label>
    <textarea asp-for="GoogleSchema" rows="5" class="form-control content-preview-text"></textarea>
    <span class="hint">@T["Google schema as json."]</span>
</fieldset>
